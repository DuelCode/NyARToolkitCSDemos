<Window x:Class="Test_WPFSimple7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test_WPFSimple7"
        xmlns:controls="clr-namespace:WPFMediaKit.DirectShow.Controls;assembly=WPFMediaKit"
        mc:Ignorable="d"
        Title="MainWindow" Height="632" Width="800">
    <Grid>
        <Grid x:Name="GdMainZm" Width="800" Height="600" VerticalAlignment="Center">
            <controls:VideoCaptureElement DesiredPixelWidth="800" DesiredPixelHeight="600" FPS="30"
                    Width="800" Height="600" VerticalAlignment="Center" HorizontalAlignment="Center"
                    x:Name="CameraZm"/>
        </Grid>
        <Canvas x:Name="CvMainZm" Width="800" Height="600" VerticalAlignment="Center"/>
        <TextBlock x:Name="TbkInfoZm" VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="16" Foreground="Red"/>
    </Grid>
</Window>
